{% extends '@Admin/layout.html.twig' %}

{% form_theme form 'admin/form/layout.html.twig' %}

{% block title %}{{ 'title.new_order'|trans }} / {{ 'title.orders'|trans }} / {{ parent() }}{% endblock %}
{% block body_id 'admin_sales_order_new' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ 'title.new_order'|trans }}</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_index') }}">{{ 'title.home'|trans }}</a></li>
                <li><a href="{{ path('admin_sales_order_index') }}">{{ 'title.orders'|trans }}</a></li>
                <li class="active"><strong>{{ 'title.new_order'|trans }}</strong></li>
            </ol>
        </div>
        <div class="col-lg-2"></div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <a href="{{ path('admin_sales_order_index') }}" class="btn btn-link"><i class="fa fa-arrow-left"></i> {{ 'action.back'|trans }}</a>
                    <button type="submit" form="{{ form.vars.id }}" class="btn btn-primary">{{ 'action.submit_order'|trans }}</button>
                </div>

                {{ form_start(form, { attr: { id: form.vars.id } }) }}
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab-1" data-toggle="tab">注文情報</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    {{ form_widget(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
