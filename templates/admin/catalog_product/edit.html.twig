{% extends 'admin/base.html.twig' %}

{% form_theme form 'admin/form/layout.html.twig' %}

{% block title %}{{ product.name }} / {{ 'title.products'|trans }} / {{ parent() }}{% endblock %}
{% block body_id 'admin_catalog_product_edit' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ product.name }}</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_index') }}">{{ 'title.home'|trans }}</a></li>
                <li><a href="{{ path('admin_catalog_product_index') }}">{{ 'title.products'|trans }}</a></li>
                <li class="active"><strong>{{ product.name }}</strong></li>
            </ol>
        </div>
        <div class="col-lg-2"></div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <a href="{{ path('admin_catalog_product_index') }}" class="btn btn-link"><i class="fa fa-arrow-left"></i> {{ 'action.back'|trans }}</a>
                    <button type="submit" form="{{ form.vars.id }}" class="btn btn-primary">{{ 'action.save'|trans }}</button>
                </div>

                {{ form_start(form, { attr: { id: form.vars.id } }) }}
                    <div class="tabs-container">
                        <div class="tab-content">
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    {{ form_widget(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
