<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>管理画面</title>
    <link href="{{ asset('bundles/naviappsadmin/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/naviappsadmin/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/naviappsadmin/css/plugins/toastr/toastr.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/naviappsadmin/css/animate.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/naviappsadmin/css/style.css') }}" rel="stylesheet" />
</head>
<body id="naviapps_admin_admin_security_login" class="gray-bg">
<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <form action="{{ path('naviapps_admin_admin_security_login') }}" method="post" class="m-t" role="form">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

            <div class="form-group">
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'label.username'|trans }}" required="required" />
            </div>
            <div class="form-group">
                <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'label.password'|trans }}" required="required" />
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">{{ 'action.sign_in'|trans }}</button>
        </form>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="{{ asset('bundles/naviappsadmin/js/jquery-3.1.1.min.js') }}"><\/script>')</script>
<script src="{{ asset('bundles/naviappsadmin/js/bootstrap.min.js') }}"></script>
{% if error %}
    <script src="{{ asset('bundles/naviappsadmin/js/plugins/toastr/toastr.min.js') }}"></script>
    <script>
        $(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                showMethod: 'slideDown',
                timeOut: 4000
            };
            toastr.error('{{ error.messageKey|trans(error.messageData, 'security') }}');
        });
    </script>
{% endif %}
</body>
</html>
