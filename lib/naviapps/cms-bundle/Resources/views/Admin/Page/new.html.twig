{% extends '@NaviappsAdmin/layout.html.twig' %}

{% form_theme form '@NaviappsAdmin/Form/layout.html.twig' %}

{% block title %}{{ 'title.new_page'|trans }} / {{ 'title.pages'|trans }} / {{ parent() }}{% endblock %}
{% block body_id 'naviapps_cms_admin_page_new' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ 'title.new_page'|trans }}</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('naviapps_admin_index') }}">{{ 'title.home'|trans }}</a></li>
                <li><a href="{{ path('naviapps_cms_admin_page_index') }}">{{ 'title.pages'|trans }}</a></li>
                <li class="active"><strong>{{ 'title.new_page'|trans }}</strong></li>
            </ol>
        </div>
        <div class="col-lg-2"></div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <a href="{{ path('naviapps_cms_admin_page_index') }}" class="btn btn-link"><i class="fa fa-arrow-left"></i> {{ 'action.back'|trans }}</a>
                    <a href="{{ path('naviapps_cms_admin_page_new') }}" class="btn btn-link">{{ 'action.reset'|trans }}</a>
                    {{ form_widget(form.saveAndContinueEdit, { label: 'action.save_and_continue_edit', attr: { form: form.vars.id, class: 'btn btn-primary' } }) }}
                    <button type="submit" form="{{ form.vars.id }}" class="btn btn-primary">{{ 'action.save_page'|trans }}</button>
                </div>

                {{ form_start(form, { attr: { id: form.vars.id } }) }}
                    <div class="tabs-container">
                        <div class="tab-content">
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    {{ form_row(form.title) }}
                                    <div class="form-group{% if (not form.content.vars.compound or form.content.vars.force_error|default(false)) and not form.content.vars.valid %} has-error{% endif %}">
                                        <div class="col-sm-12">
                                            {{ form_widget(form.content) }}
                                            {{ form_errors(form.content) }}
                                        </div>
                                    </div>
                                    {{ form_row(form.identifier) }}
                                    {{ form_row(form.metaKeywords) }}
                                    {{ form_row(form.metaDescription) }}
                                </div>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
