{% extends 'admin/base.html.twig' %}

{% form_theme form 'admin/form/layout.html.twig' %}

{% block title %}#{{ user.id }} / {{ 'title.users'|trans }} / {{ parent() }}{% endblock %}
{% block body_id %}admin_user_edit{% endblock %}

{% block body %}
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2>#{{ user.id }}</h2>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_index') }}">{{ 'title.home'|trans }}</a></li>
        <li><a>{{ 'title.system'|trans }}</a></li>
        <li><a href="{{ path('admin_user_index') }}">{{ 'title.users'|trans }}</a></li>
        <li class="active"><strong>#{{ user.id }}</strong></li>
      </ol>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        {{ form_start(form) }}
          <div class="tabs-container">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#tab-1" data-toggle="tab">ユーザー情報</a></li>
              <!--<li class="disabled"><a href="#tab-2" data-toggle="tab">ユーザー権限</a></li>-->
            </ul>
            <div class="tab-content">
              <div id="tab-1" class="tab-pane active">
                <div class="panel-body">
                  {{ form_widget(form) }}
                </div>
              </div>
              <!--
              <div id="tab-2" class="tab-pane">
                <div class="panel-body"></div>
              </div>
              -->
            </div>
          </div>
        {{ form_end(form) }}

        <a href="{{ path('admin_user_index') }}" class="btn btn-link"><i class="fa fa-arrow-left"></i> {{ 'action.back'|trans }}</a>
        {{ include('admin/user/_delete_form.html.twig', { user: user }, with_context = false) }}
        <a href="{{ path('admin_user_edit', { id: user.id }) }}" class="btn btn-link">{{ 'action.reset'|trans }}</a>
        <button type="submit" class="btn btn-primary">{{ 'action.save_user'|trans }}</button>
      </div>
    </div>
  </div>
{% endblock %}
