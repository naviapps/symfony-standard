{% extends 'admin/base.html.twig' %}

{% block body_id %}admin_admin_user_index{% endblock %}

{% block body %}
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2>ユーザー</h2>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_index') }}">ホーム</a></li>
        <li class="active"><strong>ユーザー</strong></li>
      </ol>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <a href="{{ path('admin_user_new') }}" class="btn btn-success">{{ 'action.create_user'|trans }}</a>

        <div class="ibox">
          <div class="ibox-content">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>ID</th>
                <th>{{ 'label.email'|trans }}</th>
                <th class="text-right">Action</th>
              </tr>
              </thead>
              <tbody>
              {% for user in pagination %}
                <tr>
                  <td>{{ user.id }}</td>
                  <td>{{ user.email }}</td>
                  <td class="text-right"><a href="{{ path('admin_user_edit', { id: user.id }) }}" class="btn-white btn btn-xs">編集</a></td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="3">{{ 'user.no_users_found'|trans }}</td>
                </tr>
              {% endfor %}
              </tbody>
              <tfoot>{{ knp_pagination_render(pagination) }}</tfoot>
            </table>

            {{ knp_pagination_render(pagination) }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
