{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'title.customers'|trans }} / {{ parent() }}{% endblock %}
{% block body_id %}admin_customer_index{% endblock %}

{% block body %}
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2>{{ 'title.customers'|trans }}</h2>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_index') }}">{{ 'title.home'|trans }}</a></li>
        <li class="active"><strong>{{ 'title.customers'|trans }}</strong></li>
      </ol>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <a href="{{ path('admin_customer_new') }}" class="btn btn-success">{{ 'action.add_new_customer'|trans }}</a>

        <div class="ibox">
          <div class="ibox-content">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.email'|trans }}</th>
                <th class="text-right">{{ 'label.action'|trans }}</th>
              </tr>
              </thead>
              <tbody>
              {% for customer in pagination %}
                <tr>
                  <td>{{ customer.id }}</td>
                  <td>{{ customer.email }}</td>
                  <td class="text-right"><a href="{{ path('admin_customer_edit', { id: customer.id }) }}" class="btn-white btn btn-xs">{{ 'action.edit'|trans }}</a></td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="3">{{ 'customer.no_customers_found'|trans }}</td>
                </tr>
              {% endfor %}
              </tbody>
              <tfoot>{{ knp_pagination_render(pagination) }}</tfoot>
            </table>

            {{ knp_pagination_render(pagination) }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
